<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/notesSecondaryTextColor"
                android:textSize="@dimen/home_title">

    <ImageView
        android:id="@+id/folder_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_dropbox_folder"/>

    <TextView
        android:id="@+id/drop_box_directory_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/folder_image"
        android:layout_toRightOf="@id/folder_image"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/notesSecondaryTextColor"
        android:textSize="@dimen/list_text_size"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/folder_image"
        android:background="@color/notesDropBoxSeparator"/>


</RelativeLayout>